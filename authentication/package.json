{
  "name": "sheefoo-backend",
  "version": "1.0.0",
  "description": "Backend for the shefoo application",
  "scripts": {
    "local:db:server": "cd misc/localDB && docker-compose up",
    "local:db:client": "sudo docker exec -it localdb_local_myssql_1 bash -c '/opt/mssql-tools/bin/sqlcmd -S localhost -U SA -P \"Safeknight123!\"'",
    "local:node:permissions": "npm config set user 0 && npm config set unsafe-perm true",
    "build:ts": "tsc",
    "build": "npm run build:ts && npm run lint && npm run copy-static-assets",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch:debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve:debug": "nodemon --inspect dist/src/server.js",
    "serve": "node dist/src/server.js",
    "deploy": "npm run build && npm run serve",
    "start": "npm run dev",
    "test:notCurrentlyImplemented:thisIsPlaceHolder": "jest --forceExit --coverage --verbose",
    "watch:debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run serve:debug\"",
    "watch:node": "nodemon dist/src/server.js",
    "watch:test": "npm run test -- --watchAll",
    "watch:ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run watch:node\"",
    "dev": "npm run watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SafeKnight/backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SafeKnight/backend/issues"
  },
  "homepage": "https://github.com/SafeKnight/backend#readme",
  "devDependencies": {
    "@types/async": "^3.2.12",
    "@types/bcryptjs": "^2.4.2",
    "@types/bluebird": "^3.5.36",
    "@types/chai": "^4.3.0",
    "@types/compression": "^1.7.2",
    "@types/concurrently": "^6.4.0",
    "@types/cors": "^2.8.12",
    "@types/errorhandler": "^1.5.0",
    "@types/eslint": "^8.4.1",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lusca": "^1.7.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.21",
    "@types/request": "^2.48.8",
    "@types/shelljs": "^0.8.11",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.10.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "nodemon": "^2.0.15",
    "shelljs": "^0.8.5",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.6.0",
    "types": "^0.1.1",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.6.1",
    "@types/mongoose": "^5.11.97",
    "async": "^3.2.3",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.6",
    "morgan": "^1.10.0",
    "mssql": "^8.0.2",
    "node-rsa": "^1.1.1",
    "path": "^0.12.7",
    "xss-clean": "^0.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,html}": [
      "prettier --single-quote --write"
    ]
  }
}
